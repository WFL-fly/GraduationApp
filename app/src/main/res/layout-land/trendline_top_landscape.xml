<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:layout_marginStart="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    >
    <TextView
        android:id="@+id/tv_trendline_1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="14%"
        android:text="@string/proto_cur"
        android:gravity="center"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorTVText"
        android:background="@color/colorTVBackground"
        android:typeface="sans"
        />
    <Spinner
        android:id="@+id/Spi_trendline_FromCurList"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_widthPercent="10%"
        android:layout_toEndOf="@+id/tv_trendline_1"
        android:layout_toRightOf="@+id/tv_trendline_1"
        app:layout_marginLeftPercent="0.3%"
        app:layout_marginStartPercent="0.3%"

        android:layout_alignTop="@+id/tv_trendline_1"
        android:layout_alignBottom="@+id/tv_trendline_1"

        android:textColor="@color/colorSpiText"
        android:background="@color/colorSpiBackground"
        android:typeface="sans"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
         >
    </Spinner>
    <TextView
        android:id="@+id/tv_trendline_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="14%"
        android:layout_toEndOf="@+id/Spi_trendline_FromCurList"
        android:layout_toRightOf="@+id/Spi_trendline_FromCurList"
        app:layout_marginLeftPercent="0.3%"
        app:layout_marginStartPercent="0.3%"

        android:layout_alignTop="@+id/tv_trendline_1"
        android:layout_alignBottom="@+id/tv_trendline_1"

        android:text="@string/target_cur"
        android:gravity="center"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorTVText"
        android:background="@color/colorTVBackground"
        android:typeface="sans"
        />
    <Spinner
        android:id="@+id/Spi_trendline_ToCurList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="10%"
        android:layout_toEndOf="@+id/tv_trendline_2"
        android:layout_toRightOf="@+id/tv_trendline_2"
        app:layout_marginLeftPercent="0.3%"
        app:layout_marginStartPercent="0.3%"

        android:layout_alignTop="@+id/tv_trendline_2"
        android:layout_alignBottom="@+id/tv_trendline_2"

        android:textColor="@color/colorSpiText"
        android:background="@color/colorSpiBackground"
        android:typeface="sans"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        >
    </Spinner>
    <TextView
        android:id="@+id/tv_trendline_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="13%"
        android:layout_toEndOf="@+id/Spi_trendline_ToCurList"
        android:layout_toRightOf="@+id/Spi_trendline_ToCurList"
        app:layout_marginLeftPercent="0.3%"
        app:layout_marginStartPercent="0.3%"
        android:layout_alignTop="@+id/tv_trendline_1"
        android:layout_alignBottom="@+id/tv_trendline_1"

        android:text="@string/date_interval"
        android:gravity="center"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorTVText"
        android:background="@color/colorTVBackground"
        android:typeface="sans"
        />

    <TextView
        android:id="@+id/tv_tl_startdate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="13%"
        android:layout_alignBottom="@+id/tv_trendline_1"
        android:layout_alignTop="@+id/tv_trendline_1"
        android:layout_toEndOf="@+id/tv_trendline_3"
        android:layout_toRightOf="@+id/tv_trendline_3"
        app:layout_marginLeftPercent="0.3%"
        app:layout_marginStartPercent="0.3%"

        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:background="@color/colorTVBackground"
        android:clickable="true"
        android:gravity="center"
        android:onClick="startDate_onClick"
        android:textColor="@color/colorTVText"
        android:typeface="sans"

        />
    <TextView
        android:id="@+id/tv_tl_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="2%"
        android:layout_toEndOf="@+id/tv_tl_startdate"
        android:layout_toRightOf="@+id/tv_tl_startdate"
        app:layout_marginLeftPercent="0.3%"
        app:layout_marginStartPercent="0.3%"

        android:layout_alignTop="@+id/tv_trendline_1"
        android:layout_alignBottom="@+id/tv_trendline_1"
        android:text="-"
        android:gravity="center"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorTVText"
        android:background="@color/colorTVBackground"
        android:typeface="sans"
        />
    <TextView
        android:id="@+id/tv_tl_stopdate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="13%"
        android:layout_toEndOf="@+id/tv_tl_4"
        android:layout_toRightOf="@+id/tv_tl_4"
        app:layout_marginLeftPercent="0.3%"
        app:layout_marginStartPercent="0.3%"

        android:layout_alignTop="@+id/tv_trendline_1"
        android:layout_alignBottom="@+id/tv_trendline_1"
        android:gravity="center"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorTVText"
        android:background="@color/colorTVBackground"
        android:typeface="sans"
        android:clickable="true"
        android:onClick="stopDate_onClick"
        />

    <Button
        android:id="@+id/bn_tl_updateshow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/tv_trendline_1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_trendline_1"
        android:layout_toEndOf="@+id/tv_tl_stopdate"

        android:layout_toRightOf="@+id/tv_tl_stopdate"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:background="@color/colorTVBackground"
        android:gravity="center"
        android:onClick="updateShow_onClick"
        android:text="@string/trendline_update"
        android:textColor="@color/colorTVText"
        android:typeface="sans"
        app:layout_marginLeftPercent="0.3%"
        app:layout_marginStartPercent="0.3%"
        app:layout_widthPercent="10%" />
</android.support.percent.PercentRelativeLayout>